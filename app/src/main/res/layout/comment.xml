<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="@dimen/margin_vertical_previews_linebreak"
        android:background="@color/eerie_black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="username"
        android:fontFamily="@font/open_sans_semibold"
        android:textSize="@dimen/text_size_regular_info"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="comment"
        android:fontFamily="@font/open_sans"
        android:textSize="@dimen/text_size_regular_contents"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="7dp"
        android:gravity="end">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_horizontal_vote"
            android:src="@drawable/outline_thumb_up_black_20"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:fontFamily="@font/open_sans_bold"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_horizontal_vote"
            android:src="@drawable/outline_thumb_down_black_20"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:fontFamily="@font/open_sans_bold"/>
    </LinearLayout>
</LinearLayout>